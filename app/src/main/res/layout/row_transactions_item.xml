<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:foreground="?attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/methodImg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="5dp"
        android:src="@drawable/round_swap_horizontal_circle_24"
        android:transitionName="sharedImg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/Circular" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/methodImg"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/methodTw"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:autoSizeTextType="uniform"
            android:drawablePadding="5dp"
            android:fontFamily="@font/regular"
            android:includeFontPadding="false"
            android:text="Transfer"
            android:textColor="?android:textColorPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dateTw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:includeFontPadding="false"
            android:text="Oct 21, 2023 - 10:10" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/amountTw"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/semi_bold"
            android:gravity="end"
            android:includeFontPadding="false"
            android:text="1 COM"
            android:textColor="?android:textColorPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/amountPriceTw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="@font/regular"
            android:includeFontPadding="false"
            android:text="$10" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>