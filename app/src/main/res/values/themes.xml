<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Comwallet" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/black</item>

<!--        <item name="android:windowTranslucentStatus">true</item>-->
<!--        <item name="android:windowTranslucentNavigation">true</item>-->

    </style>

    <style name="Theme.Comwallet" parent="Base.Theme.Comwallet" />

    <style name="ButtonRoundedStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0</item> <!-- Remove font spacing -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Button.Rounded</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonOutlinedRoundedStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:padding">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:letterSpacing">0</item> <!-- Remove font spacing -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Button.Rounded</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ShapeAppearanceOverlay.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Button.Oval" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">120dp</item>
    </style>

    <style name="ButtonOvalStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0</item> <!-- Remove font spacing -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Button.Oval</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonOutlinedOvalStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:padding">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0</item> <!-- Remove font spacing -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Button.Oval</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonTextStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:padding">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/medium</item>
        <item name="android:letterSpacing">0</item> <!-- Remove font spacing -->
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedSquare">
        <item name="cornerSize">10%</item>
    </style>

    <style name="CornerCut">
        <item name="cornerSize">15dp</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="DiamondCut">
        <item name="cornerSize">75dp</item>
        <item name="cornerFamily">cut</item>
    </style>

